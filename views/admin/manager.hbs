<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

        <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
            integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <style>
        body {
            background-image: url('../../public/img/background.jpg');
        }
    </style>
    <title>Document</title>
</head>
<body>
    <div class="container">
        <section>
        <h2>Create new manager</h2>
        <div class="card">
            <form class="row g-3" method="post" action="/admin/manager/create">
                <div class="col-auto">
                    <input type="text" class="form-control" id="username" name="username" placeholder="Username">
                </div>
                <div class="col-auto">
                    <input type="password" class="form-control" id="password" placeholder="Password" name="password">
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary mb-3">Create new manager</button>
                </div>
            </form>
        </div>
        </section>

        <section>
        <h2>Manager's account management</h2>
        {{#each managerList}}
        <div class="card">
            <div class="card-body"> 
                <div class="row align-items-start">
                    <div class="col">
                        <h6>{{this.username}}
                            {{#if this.isActive}}
                            <span class="badge bg-success">Active</span>
                            {{else}}
                            <span class="badge bg-warning text-dark">Inactive</span>
                            {{/if}}
                        </h6>
                    </div>
                    <div class="col">
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            {{#if this.isActive}}
                            <form action="/admin/manager/disable/" method="post">
                                <input type="hidden" name="account_id" value={{this.account_id}}>
                                <button type="submit" class="btn btn-outline-danger">Disable</button>
                            </form>
                            {{else}}
                            <form action="/admin/manager/enable/" method="post">
                                <input type="hidden" name="account_id" value={{this.account_id}}>
                                <button type="submit" class="btn btn-outline-success">Enable</button>
                            </form>
                            {{/if}}
                            <a class="btn btn-outline-secondary" data-bs-toggle="collapse" href="#collapse{{ this.account_id }}"
                                role="button" aria-expanded="false" aria-controls="collapseExample">
                                View history...
                            </a>
                        </div>
                
                    </div>
                </div>
                <div class="container">
                    <div class="collapse" id="collapse{{ this.account_id }}">
                        <h6>Treatment history</h6>
                        {{#if this.hasStatusHistory}}
                        <table class="table table-striped table-hover" id="treatment-table" style="width: 50rem;">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Treatment ID</th>
                                    <th scope="col">Person ID</th>
                                    <th scope="col">Time</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each this.treatment_history}}
                                <tr>
                                    <th scope="row">{{this.treatment_history_id}}</th>
                                    <td>{{this.treatment_id}}</td>
                                    <td>{{this.person_id}}</td>
                                    <td>{{this.time}}</td>
                                </tr>
                                {{/each}}
                                
                            </tbody>
                        </table>
                        {{else}}
                        (blank)
                        {{/if}}
                        <h6>Status history</h6>
                        {{#if this.hasStatusHistory}}
                        <table class="table table-success table-striped table-hover" id="status-table" style="width: 50rem;">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Person ID</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Time</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each this.status_history}}
                                <tr>
                                    <th scope="row">{{this.status_history_id}}</th>
                                    <td>{{this.person_id}}</td>
                                    <td>{{this.status}}</td>
                                    <td>{{this.time}}</td>
                                </tr>
                                {{/each}}
                                
                            </tbody>
                        </table>
                        {{else}}
                        (blank)
                        {{/if}}
                    </div>
                </div>
                
            </div>
        </div>
        {{/each}}
        <nav aria-label="...">
            <ul class="pagination">

                <li class="page-item {{#if hasPrevious}} {{else}} disabled {{/if}}">
                    <a class="page-link" href="#">Previous</a>
                </li>
                {{#each indexList}}
                <li class="page-item {{#if this.isCurrent}} active {{/if}}">
                    <a class="page-link" href="/admin/manager?pageIndex={{this.index}}">
                        {{this.index}}
                    </a>
                </li>
                {{/each}}

                <li class="page-item {{#if hasNext}} {{else}} disabled {{/if}}">
                    <a class="page-link" href="#">Next</a>
                </li>
            </ul>
        </nav>
    </section>
    </div>
    
</body>
</html>
