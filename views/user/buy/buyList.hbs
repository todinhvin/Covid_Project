  </div>

  <table class="table table-striped" style="background-color: white;">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Tên gói</th>
        <th scope="col">Danh sách sản phẩm</th>
        <th scope="col">Giá gốc</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      {{#each Packages}}
      <tr>
        <th scope="row">{{this.package_id}}</th>
        <td>{{this.name}}</td>
        <td>{{this.itemlist}}</td>
        <td>{{this.price}}</td>
        <td class="victim-btns">
          <a href="buy/{{this.package_id}}/detail" class="btn btn-primary">Chi tiết</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  <!-- Pagination -->
  <nav class="pagination-outer" aria-label="Page navigation">
    <ul class="pagination">
      {{#forN totalPage}}
        {{#compareInt this ../page}}
          <li class="page-item active">
            <a class="page-link" href="/user/buy/?page={{this}}">{{this}}</a>
          </li>
        {{else}}
          <li class="page-item"><a
              class="page-link"
              href="/user/buy?page={{this}}&filter={{../filter}}&search={{../search}}"
            >{{this}}</a></li>
        {{/compareInt}}
      {{/forN}}
    </ul>
  </nav>
</div>