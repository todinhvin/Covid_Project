<div class="container">
    <h2 style="color: #fff; margin-top: 20px; margin-right: auto">
        Thêm người liên quan Covid
    </h2>
    <form class="form-create-patient row" action="/patient/create" method="POST">
        <div class="col col-6">
            <div class="">
                <label class="flabel mb-1" for="name">Họ và tên</label><input class="form-control" type="text"
                    name="name" required="required" />
            </div>
            <div class="">
                <label class="flabel mb-1" for="cmt">Số CMT/CCCD</label><input class="form-control" type="text"
                    name="person_id" required="required" pattern="^\d{9,15}$"
                    title="Số CMT/CCCD phải có từ 9-12 chữ số" />
            </div>
            <div class="form-div">
                <label class="flabel mb-1" for="birth">Ngày sinh</label><input class="form-control" type="date"
                    name="birthday" required="required" />
            </div>
            <div class="form-div">
                <label class="flabel mb-1" for="sex">Trạng thái</label><select class="form-select" name="gioiTinh">
                    <option value="NAM">F0</option>
                    <option value="NỮ">F1</option>
                    <option value="NỮ">F2</option>
                </select>
            </div>
        </div>
        <div class="col col-6">
            <div class="form-div">
                <label class="flabel mb-1">Địa chỉ nơi ở</label><input class="form-control" type="text" name="address"
                    required="required" pattern="^[A-Za-z0-9]{0,}" placeholder="Xã - Huyện -Tỉnh" />
            </div>
            <div class="form-div">
                <label class="flabel mb-1" for="sex">Nơi đang điều trị</label><select class="form-select"
                    name="address_treated">
                    <option value="">Trống</option>
                    <option value="MỚI SINH">Mới sinh</option>
                    <option value="ĐÃ MẤT">Đã mất</option>
                    <option value="NHẬP CƯ">Nhập cư</option>
                </select>
            </div>
            <div class="form-div">
                <label class="flabel mb-1">Liên quan đến người COVID</label><input class="form-control" type="text"
                    name="person_related" required="required" pattern="^[A-Za-z0-9]{0,}"
                    placeholder="Nhập CMND/CCCD người COVID" />
            </div>

            <div class="d-flex justify-content-around" style="margin-top: 20px">
                <button class="btn btn-tung" type="submit">Lưu</button><a class="btn btn-tung" href="/nhan-khau">Hủy</a>
            </div>
        </div>
    </form>
</div>