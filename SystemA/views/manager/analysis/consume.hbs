<div class="container" style="margin-bottom:40px;">

  
   <div class="victim-category" style="margin-bottom: 16px;">

       <p>Thống kê theo thời gian:</p>
      <form action="{{url}}" method="get" class="form-inline md-form" style=" display: flex;align-items: center;justify-content: space-around;flex:2">
         <select class="custom-select" name="filter" style="width: 80%;">
            <option >Lựa chọn</option>
            <option {{#compareString filter "week"}}selected{{/compareString}} value="week">1 tuần</option>
            <option {{#compareString filter "one_month"}}selected{{/compareString}} value="one_month">1 tháng</option>
            <option {{#compareString filter "three_month"}}selected{{/compareString}} value="three_month">3 tháng</option>
            <option {{#compareString filter "year"}}selected{{/compareString}} value="year">1 năm</option>
        </select>
        <button class="btn" style="background: #3fa4e2" type="submit">
          Lựa chọn
        </button>
      </form>
      
    </div>
    <div style="background:#FFFFFF;border-radius:8px;padding:40px;">
      <h2 style="margin-bottom:16px">Thống kê tiêu thụ các gói nhu yếu phẩm</h2>
      <div  style=" display:grid; grid-template-columns:1fr 1fr 1fr;grid-gap:32px 0">
         <canvas id="barChart1" ></canvas>
        
         <input type="hidden"  id="name_packages"   value="{{namePackages}}">
        <input type="hidden" id="amount_packages"  value="{{amountPackages}}">
      </div>

        <h2 style="margin:16px 0">Thống kê tiêu thụ sản phẩm</h2>
       <div  style=" display:grid; grid-template-columns:1fr 1fr 1fr;grid-gap:32px 0">
         <canvas id="barChart2" ></canvas>
        <input type="hidden"  id="name_items"  name="name_items" value="{{nameItems}}">
        <input type="hidden" id="amount_items" name="amount_items" value="{{amountItems}}">
      </div>

    </div>
 
</div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js"></script>
<script src="../../../js/chart.js"></script>

  <script >
    const labels1 = JSON.parse(document.getElementById('name_packages').value);
    const data1 = JSON.parse(document.getElementById('amount_packages').value);
    createBars(labels1,data1,'barChart1')


    const labels = JSON.parse(document.getElementById('name_items').value);
    const data = JSON.parse(document.getElementById('amount_items').value);
    createBars(labels,data,'barChart2')


   

    </script>

  